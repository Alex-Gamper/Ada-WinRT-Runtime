aggregate project Winrt_Runtime is

   Base_Source_Dir       := Project'Project_Dir;
   Base_Installation_Dir := "lib\gcc\x86_64-w64-mingw32\8.2.1/";
   Default_Prefix        := Base_Installation_Dir & "rts-Winrt";
   Install_Dir           := external ("PREFIX", Default_Prefix);

   for external ("INSTALL_PREFIX") use Install_Dir;
   for Project_Path use (Base_Source_Dir);
   for Project_Files use ("Winrt_Library.gpr", "WinRt_Install.gpr");

end Winrt_Runtime;